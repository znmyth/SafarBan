<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login_gradient"
    tools:context=".MainActivity">

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:layout_marginBottom="80dp">

        <LinearLayout
            android:id="@+id/container"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Search bar -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:elevation="4dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical|end">

                    <EditText
                        android:id="@+id/searchEditText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:hint="جست‌وجوی سفر..."
                        android:inputType="text"
                        android:minHeight="48dp"
                        android:textColor="#000000"
                        android:textColorHint="#888888"
                        android:textDirection="rtl" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_search"
                        android:layout_marginStart="8dp"
                        app:tint="#888888" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Trip Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardArbaeenTrip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:elevation="6dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@drawable/card_gradient_background"
                    android:gravity="right">

                    <!-- Title Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="right|center_vertical">

                        <TextView
                            android:id="@+id/tvTripTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="سفر اربعین"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="#ffffff"
                            android:gravity="right" />


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="8dp"
                        android:background="#ffffff" />

                    <!-- Time & Checklist Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="right"
                        android:layout_marginTop="4dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="right|center_vertical">



                            <TextView
                                android:id="@+id/tvTripRemaining"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="۳ روز مانده تا سفر"
                                android:textSize="14sp"
                                android:textColor="#ffffff" />

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@android:drawable/ic_lock_idle_alarm"
                                android:layout_marginStart="4dp"
                                app:tint="#ffffff" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="right|center_vertical">



                            <TextView
                                android:id="@+id/tvUncheckedItems"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="۳ آیتم چک‌نشده"
                                android:textSize="14sp"
                                android:textColor="#ffffff" />

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@android:drawable/checkbox_off_background"
                                android:layout_marginStart="4dp"
                                app:tint="#ffffff" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <!-- Custom FAB -->
    <ImageButton
        android:id="@+id/fabAddTrip"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="72dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#033a60"
        android:background="@drawable/fab_circle_background"
        android:src="@drawable/ic_add"
        android:scaleType="centerInside"
        android:contentDescription="افزودن سفر جدید"
        app:tint="@android:color/white" />

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        app:menu="@menu/bottom_nav_menu"
        android:background="#f5e0c5"
        app:itemIconTint="@color/selector_nav_icon"
        app:itemTextColor="@color/selector_nav_icon"
        app:labelVisibilityMode="unlabeled" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
